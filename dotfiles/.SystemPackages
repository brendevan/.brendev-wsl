  libcurl4-openssl-dev  \   # languageserver^ dep
  libgsl-dev            \   # GNU GSL library - mvabund^ dep (via rcppgsl^)
  libssl-dev            \   # languageserver^ dep
  libxml2-dev           \   # languageserver^ dep 
  moreutils             \   # sponge command used in bdev
  pandoc                \
