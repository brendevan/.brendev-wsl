    "textMateRules": [
      {
        "name": "R variable", 
        "scope": "variable", 
        "settings": {
          "foreground": "#ABB2BF"
        }
      },
      {
        "name": "R function parameter", 
        "scope": "variable.parameter", 
        "settings": {
          "foreground": "#E06C75"
        }
      },
      {
        "name": "Heading text quarto",
        "scope": "markup.heading entity.name.section",
        "settings": {
          "foreground": "#e06c75"
        }
      },
      {
        "name": "Heading hash quarto",
        "scope": "markup.heading punctuation.definition.heading",
        "settings": {
          "foreground": "#e06c75"
        }
      },
      {
        "name": "List bullets quarto",
        "scope": "punctuation.definition.list.begin.quarto",
        "settings": {
          "foreground": "#d19A66"
        }
      },
      {
        "name": "Inline code quarto",
        "scope": "markup.inline.raw.string.quarto",
        "settings": {
          "foreground": "#d179c8"
        } //blue: #66b8fb purple: #b086f7
      },
      {
        "name": "Inline code marks",
        "scope": "punctuation.definition.raw.quarto",
        "settings": {
          "foreground": "#7F848E"
        }
      },
      {
        "name": "Code cell header text quarto",
        "scope": "fenced_code.block.language.markdown",
        "settings": {
          "foreground": "#f9b249"
        }
      },
      {
        "name": "Hyperlink text quarto",
        "scope": "string.other.link.title.quarto",
        "settings": {
          "foreground": "#2482cf"
        }
      },
      {
        "name": "Hyperlink link quarto",
        "scope": "markup.underline.link.quarto",
        "settings": {
          "foreground": "#7F848E"
        }
      },
      {
        "name": "Hyperlink link brackets quarto",
        "scope": "punctuation.definition.metadata.quarto",
        "settings": {
          "foreground": "#7F848E"
        }
      },
      {
        "name": "Hyperlink text open bracket quarto",
        "scope": "punctuation.definition.link.title.begin.quarto",
        "settings": {
          "foreground": "#7F848E"
        }
      },
      {
        "name": "Hyperlink text open close quarto",
        "scope": "punctuation.definition.link.title.end.quarto",
        "settings": {
          "foreground": "#7F848E"
        }
      },
      {
        "name": "Code cell marks quarto",
        "scope": "punctuation.definition.markdown",
        "settings": {
          "foreground": "#824338"
        }
      },
      {
        "name": "Code cells brackets quarto",
        "scope": "markup.fenced_code.block.markdown",
        "settings": {
          "foreground": "#824338"
        }
      },
      {
        "scope": "constant.numeric",
        "settings": {
          "foreground": "#f9b249"
        }
      },
      {
        "name": "Math symbols $$",
        "scope": [
          "keyword.control.import.math.begin.quarto",
          "keyword.control.import.math.end.quarto"
        ],
        "settings": {
          "foreground": "#23272E"
        }
      },
      {
        "name": "Math text",
        "scope": "meta.embedded.math.quarto",
        "settings": {
          "foreground": "#687288"
        }
      },
      {
        "name": "Math symbol text",
        "scope": [
          "constant.character.math.tex",
          "constant.other.general.math.tex",
          "punctuation.definition.constant.math.tex"
        ],
        "settings": {
          "foreground": "#687288"
        }
      },
      {
        "name": "Math numbers",
        "scope": "constant.numeric.math.tex",
        "settings": {
          "foreground": "#687288"
        }
      },
      {
        "name": "Math function text",
        "scope": [
          "entity.name.function.math.tex",
          "punctuation.definition.function.math.tex"
        ],
        "settings": {
          "foreground": "#3f76a0"
        }
      },
      {
        "name": "Math brackets",
        "scope": [
          "punctuation.math.begin.bracket.round",
          "punctuation.math.end.bracket.round"
        ],
        "settings": {
          "foreground": "#f90820"
        }
      },
    ]
  },
